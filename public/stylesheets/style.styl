body
  background: white
  font-size:13px
  text-shadow:0 1px 0 white

header
  width:100%
  height:85px
  margin:0
  div.top
    background: #393939
    height:41px
    border-bottom:2px solid #CBCBCB
    h1, h2
      font-size:14px
      line-height:41px
      color:#fff
      text-shadow:0 1px 0 black
      display:inline-block
    h2
      font-weight:normal
      margin-left:6px
  nav
    margin-left:-10px;
    height:41px
    background:#F7F7F7
    border-bottom: 1px solid #E5E5E5
    ul
      list-style-type:none
      li
        display:inline-block
        height:41px
        padding:0 5px 
        margin-right:20px
        a
         line-height:38px
         color:#67686D
         font-weight:bold
         &:hover
          color:#070000
          text-decoration: none
        &.active
         height:38px
         border-bottom:3px solid #DEDEDE
         a
          color:#070000

#main 
  margin-top:20px
  h1
    font-size:13px
    width:100%
    border-bottom:1px solid #E5E5E5
    line-height:20px
    margin-bottom:20px
    color:#2B3632


footer
  text-align:center
  font-size: 85%
  margin:10px
  color:#999
  a
    color:#67686D
    text-decoration:underline
    &:hover
      color:#070000

  