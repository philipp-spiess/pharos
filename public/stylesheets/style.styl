html
  background: #edefef url('/images/bg.gif')
  font-family:Arial, Verdana, sans-serif
  font-size:13px

body 
  margin: 30px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  text-shadow:0 1px 0 white

header
  width:840px
  max-width:100%
  margin:0 auto
  ul
    list-style-type:none
    li
      display:inline-block
      margin-right:10px
      a
        display:block
        padding:10px 30px
        background:rgba(0,0,0,.05)
        border-top-left-radius:2px
        border-top-right-radius:2px
        color:#666
        box-shadow: inset 0 1px 1px rgba(0,0,0,.03)
        text-decoration:none
        &:hover
          background:rgba(0,0,0,.07)
      &.active a
        background:url('/images/bg-main.gif')
        color:#444
      &.info
        float:right
        margin-right:0
        a
          border-radius:2px
          color:#888
          background:url('/images/bg-main.gif')
          padding:7px 15px

#main 
  background:url('/images/bg-main.gif')
  border-radius:2px
  min-height:400px
  padding:20px
  width:800px
  max-width:100%
  margin:0 auto

  h1
    margin:10px 0
    font-size:180%
    font-weight:bold
    color:#345A67
  h2
    margin:10px 0
    font-size:130%

footer
  text-align:center
  font-size: 85%
  margin:10px
  color:#999
  a
    color:#345A67
    text-decoration:none

  