body
  background: white
  font-size:13px
  text-shadow:0 1px 0 white

header
  width:100%
  height:85px
  margin:0
  div.top
    background: #393939
    height:41px
    border-bottom:2px solid #CBCBCB
    h1, h2
      font-size:14px
      line-height:41px
      color:#fff
      text-shadow:0 1px 0 black
      display:inline-block
    h2
      font-weight:normal
      margin-left:6px
  nav
    margin-left:-10px;
    height:41px
    background:#F7F7F7
    border-bottom: 1px solid #E5E5E5
    ul
      list-style-type:none
      li
        display:inline-block
        height:41px
        padding:0 5px 
        margin-right:20px
        a
         line-height:38px
         color:#67686D
         font-weight:bold
         &:hover
          color:#070000
          text-decoration: none
        &.active
         height:38px
         border-bottom:3px solid #DEDEDE
         a
          color:#070000

#main 
  margin-top:20px
  .avatar
    width:20px
    height:20px
    display:inline-block
    border-radius:10px
    line-height:30px
    margin-right:10px
    box-shadow:0 1px 0 white
  h1
    font-size:13px
    width:100%
    border-bottom:1px solid #E5E5E5
    line-height:20px
    margin-bottom:20px
    color:#2B3632
  h2
    font-size:12px
    line-height:20px
    color:#2B3632
  .content
    .table
      .loading td
        text-align:center
      pre
        width:100%
        font-size:11px
        margin:0
        padding:0
        border:0
        background:transparent!important

  .sidebar
    .table
      td
        width:50%
      .pushed, .user, .sockets
        text-align:right


footer
  text-align:center
  font-size: 85%
  margin:20px
  color:#999
  a
    color:#67686D
    text-decoration:underline
    &:hover
      color:#070000

  